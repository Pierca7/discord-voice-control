{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "typeRoots": ["../../node_modules/@types/**/*"],
    "paths": {
      "*": ["node_modules/*"],
      "configuration/*": ["./src/configuration/*"],
      "controllers/*": ["./src/controllers/*"],
      "middleware/*": ["./src/middleware/*"],
      "models/*": ["src/schemas/*"],
      "services/*": ["./src/services/*"]
    }
  },
  "include": ["src/**/*"]
}
